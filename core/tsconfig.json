{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2020",
        "outDir": "lib",
        "moduleResolution": "node",
        "jsx": "preserve",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "importsNotUsedAsValues": "error",
    },
    "ts-node": {
        "transpileOnly": true,
        "compilerOptions": {
            "module": "commonjs",
        },
    },
}
